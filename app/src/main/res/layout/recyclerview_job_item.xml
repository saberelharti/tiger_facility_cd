<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

        <TextView
                android:id="@+id/orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:30"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toEndOf="@+id/orderTime"
                android:layout_toRightOf="@+id/orderTime"
                android:layout_alignParentTop="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 2h"
                android:layout_toEndOf="@+id/orderTime"
                android:layout_toRightOf="@+id/orderTime"
                android:layout_below="@+id/customerName"/>

        <TextView
                android:id="@+id/recurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recurrence: Weekly"
                android:layout_marginBottom="13dp"
                android:layout_toEndOf="@+id/orderTime"
                android:layout_toRightOf="@+id/orderTime"
                android:layout_below="@+id/duration"/>

        <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berlin | street 2, 45000"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/status"
                android:layout_toLeftOf="@+id/status"
                android:layout_toEndOf="@+id/orderTime"
                android:layout_toRightOf="@+id/orderTime"
                android:layout_below="@+id/recurrence"/>


        <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoiced"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@+id/recurrence"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
